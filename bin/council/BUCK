    "docker_image",
    "rust_binary",
    "nix_omnibus_pkg",
)

rust_binary(
    name = "council",
    deps = [
        "//lib/council-server:council-server",
        "//lib/si-service:si-service",
        "//lib/si-std:si-std",
        "//third-party/rust:clap",
    ],
    srcs = glob(["src/**/*.rs"]),
)

